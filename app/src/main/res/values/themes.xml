<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Gsheets" parent="Base.Theme.Gsheets" />
    <!-- Base application theme. -->
    <style name="Base.Theme.Gsheets" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Основные цвета -->
        <!-- Основные цвета -->
        <item name="colorPrimary">#007BFF</item>
        <item name="colorPrimaryVariant">#0056b3</item>
        <item name="colorOnPrimary">#FFFFFF</item>

        <item name="colorSecondary">#6C757D</item>
        <item name="colorSecondaryVariant">#495057</item>
        <item name="colorOnSecondary">#FFFFFF</item>

        <!-- Цвет фона -->
        <item name="android:colorBackground">#FFFFFF</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColorSecondary">#6C757D</item>

        <!-- Стили для элементов -->
        <item name="editTextStyle">@style/EditTextStyle</item>
        <item name="textViewStyle">@style/TextViewStyle</item>
        <item name="buttonStyle">@style/ButtonStyle</item>
        <item name="spinnerStyle">@style/CustomSpinnerStyle</item>
        <item name="checkBoxStyle">@style/CheckBoxStyle</item>
    </style>

    <style name="EditTextStyle" parent="Widget.Material3.TextInputEditText.FilledBox.Dense">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item> <!-- Черный цвет для текста -->
        <item name="android:textColorHint">#6C757D</item> <!-- Средне-серый цвет для подсказки -->
    </style>

    <style name="TextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
    </style>

    <style name="CustomSpinnerStyle" parent="Widget.AppCompat.Spinner"> <!-- Новое определение -->
        <item name="android:padding">8dp</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:popupBackground">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CheckBoxStyle" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="android:textSize">14sp</item>
    </style>
</resources>