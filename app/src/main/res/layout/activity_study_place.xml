<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudyPlaceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <include
            layout="@layout/reusable_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_gravity="left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:maxWidth="550dp"
                android:text="@string/studyPlaceCertificate"
                android:textSize="28sp"
                style="?attr/textViewStyle" />

            <include
                layout="@layout/reusable_personal_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include
                layout="@layout/reusable_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include
                layout="@layout/reusable_copies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include
                layout="@layout/reusable_date_picker"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include
                layout="@layout/reusable_send"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>