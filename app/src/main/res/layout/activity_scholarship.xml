<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScholarshipActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <include
            layout="@layout/reusable_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Справка о стипендии"
            android:textSize="28sp" />

        <include
            layout="@layout/reusable_personal_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            layout="@layout/reusable_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            layout="@layout/reusable_copies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            layout="@layout/reusable_date_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />




        <include
            layout="@layout/reusable_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>