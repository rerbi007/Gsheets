<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <TextView
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/personalData"
        android:textSize="24sp"
        style="?attr/textViewStyle" />

    <EditText
        android:id="@+id/surname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:autofillHints="surname"
        android:gravity="start"
        android:hint="@string/surname"
        android:inputType="textPersonName|textCapWords"
        android:minHeight="48dp"
        android:padding="10dp"
        style="?attr/editTextStyle" />

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:autofillHints="name"
        android:gravity="start"
        android:hint="@string/name"
        android:inputType="textPersonName|textCapWords"
        android:minHeight="48dp"
        android:padding="10dp"
        style="?attr/editTextStyle"/>

    <EditText
        android:id="@+id/patronymic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:autofillHints="patronymic"
        android:gravity="start"
        android:hint="@string/patronymic"
        android:inputType="textPersonName|textCapWords"
        android:digits="абвгдеёжзийклмнопрстуфхцчшщъыьэюяАБВГДЕЁЖЗИЙКЛМНОПРСТУФХЦЧШЩЪЫЬЭЮЯ"
        android:minHeight="48dp"
        android:padding="10dp"
        style="?attr/editTextStyle" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="phone"
        android:gravity="start"
        android:hint="@string/phone"
        android:layout_marginTop="10dp"
        android:inputType="phone"
        android:minHeight="48dp"
        android:padding="10dp"
        style="?attr/editTextStyle" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:autofillHints="emailAddress"
        android:gravity="start"
        android:hint="@string/email"
        android:inputType="textEmailAddress|none"
        android:minHeight="48dp"
        android:padding="10dp"
        style="?attr/editTextStyle" />

</LinearLayout>