<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InvocationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:minWidth="360dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <include
            layout="@layout/reusable_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="Поддержка, отзывы, обратная связь"
                android:textSize="28sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:textSize="20sp"
                android:text="@string/findMe" />

            <TextView
                android:id="@+id/findMeVk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:text="@string/vk" />

            <TextView
                android:id="@+id/findMeTelegram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:text="@string/telegram" />

            <TextView
                android:id="@+id/findMeEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:text="@string/findMeEmail" />

            <TextView
                android:id="@+id/findMePhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:autoLink="phone"
                android:text="@string/findMePhone" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:maxWidth="360dp"
                android:text="Мобильное приложение «Онлайн-заявки ГАПОУ СО «АМТ» предназначено для подачи электронных заявок на справки техникума\nРазработал Шипицын Александр Павлович, студент группы 403ИСП в рамках выполнения дипломного проекта" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>